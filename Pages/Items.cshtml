@page
@model Aphrodite.Pages.Item
@{
    Layout = Layout;
}

<style>
    body {
        background-color: #f0e4d7;
    }
    .card {
        background-color: #f8f9fa;
        border-color: #dee2e6;
    }
    .card-title, .card-text {
        color: #495057;
    }
</style>

<div class="container mt-5">
    <h1 class="text-center mb-4">Items</h1>
    <div class="row">
        @foreach (var item in Model.Items)
        {
            <div class="col-md-4 col-sm-6 mb-4">
                <div class="card h-100">
                    <img src="data:image/jpeg;base64,@(Convert.ToBase64String(item.ImageData))" class="card-img-top" alt="@item.Name">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">ID: @item.Id</p>
                        <p class="card-text">Cost: @item.Cost</p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>